qsub -v EVALS="longbench",CHECKPOINT="/g/data/oy87/cw9909/llm_jepa/checkpoints/llm_jepa/patch_size_2/checkpoint_step_390000.pt",OUTPUT_NAME="llm_jepa_390k_domains",LONGBENCH_MODE="by_domain" /home/561/cw9909/experiments/llm_jepa_v2/evals.pbs

