echo ""

# Evaluate JEPA checkpoint
python experiments/llm_jepa_v2/imdb_evaluate.py \
    --model-type jepa \
    --checkpoint /g/data/oy87/cw9909/llm_jepa/checkpoints/llm_jepa/checkpoint_step_470000.pt \
    --output-dir $RESULTS_DIR

